@model ReactBikes.Models.Rental

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rental</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bike)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bike.ModelName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateFrom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateFrom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTo)
        </dd>
        @if (Model.Returned == true)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateReturned)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateReturned)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-10">
                @for (int i = 0; i < 5; i++)
                {
                    if (Model.Rating <= i)
                    {
                        <img src="/img/StarFade.jpg" width="20" />
                    }
                    else
                    {
                        <img src="/img/StarGlow.jpg" width="20" />
                    }
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comments)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comments)
            </dd>
        }
        else
        {
            <dt class = "col-sm-2">
                Not Returned
            </dt>
            <dd class = "col-sm-10">
                <a class="btn btn-primary" asp-controller="Rentals" asp-action="Return" asp-route-id="@Model.RentalId">Return</a>
            </dd>
        }
    </dl>
</div>
<div>
    @if (User.IsInRole("Manager"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.RentalId">Edit</a> @("|")
    }
    <a asp-action="Index">Back to List</a>

</div>
