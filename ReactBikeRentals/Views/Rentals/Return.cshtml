@model ReactBikes.Models.Rental

@{
    ViewData["Title"] = "Return";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Return Bike</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bike)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bike.ModelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateFrom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateFrom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTo)
        </dd>
        <div class="row">
            <div class="col-md-4">
                <form asp-controller="Rentals" asp-action="Return">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="BikeID" class="form-control" hidden />
                    <input asp-for="UserID" class="form-control" hidden />
                    <input asp-for="DateFrom" class="form-control" hidden />
                    <input asp-for="DateTo" class="form-control" hidden />
                    <div class="form-group">
                        <label asp-for="DateReturned" class="control-label"></label>
                        <input asp-for="DateReturned" class="form-control" readonly/>
                        <span asp-validation-for="DateReturned" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input id="rating" asp-for="Rating" class="form-control" readonly />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                        Choose Rating : <div class="stars">
                            <a><img src="/img/StarGlow.jpg" width="20" onclick="rating.value = 1" /></a>
                            <a><img src="/img/StarGlow.jpg" width="20" onclick="rating.value = 2" /></a>
                            <a><img src="/img/StarGlow.jpg" width="20" onclick="rating.value = 3" class="active"/></a>
                            <a><img src="/img/StarGlow.jpg" width="20" onclick="rating.value = 4" /></a>
                            <a><img src="/img/StarGlow.jpg" width="20" onclick="rating.value = 5" /></a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comments" class="control-label"></label>
                        <input asp-for="Comments" class="form-control" />
                        <span asp-validation-for="Comments" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Return" class="btn btn-primary" asp-route-RentalId="@Model.RentalId" />
                    </div>
                </form>
            </div>
        </div>
    </dl>
</div>
<div>
    <a asp-action="Index">Cancel</a>

</div>
