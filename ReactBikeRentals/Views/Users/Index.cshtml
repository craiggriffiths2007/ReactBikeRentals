@using ReactBikes.Models
@model List<ReactBikes.Models.UsersViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Users</h1>
<!--<table class="table table-striped">-->
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr class="tr_style" onclick="location.href = '@Url.Action("Manage", "Users", new { userId = user.User.Id })'">
                <td>@user.User.FirstName</td>
                <td>@user.User.LastName</td>
                <td>@user.User.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
            </tr>
        }
    </tbody>
</table>